<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aayush.aayush.sampleapplication.Fragment_POST">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_txt_name"
            android:layout_width="match_parent"
            android:layout_height = "wrap_content"
            android:text="Enter Name"
            android:padding="20dp"
            android:textAlignment="center"
            android:textColor="#999"
            />


        <EditText
            android:id="@+id/edt_txt_addr"
            android:layout_width="match_parent"
            android:layout_height = "wrap_content"
            android:text="Enter Address"
            android:padding="20dp"
            android:textAlignment="center"
            android:textColor="#999" />


        <EditText
            android:id="@+id/edt_txt_phn"
            android:layout_width="match_parent"
            android:layout_height = "wrap_content"
            android:text="Enter Phone Number"
            android:padding="20dp"
            android:textAlignment="center"
            android:textColor="#999" />

        <Button
            android:id="@+id/btn_post_record"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:text = "POST Record"
            android:padding="20dp"
            />

        <TextView
            android:id="@+id/txt_vw_response"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textAlignment="center"
            />
    </LinearLayout>

</FrameLayout>
