        android:id="@+id/edt_txt_ip"
        android:layout_height = "wrap_content"
        android:layout_width="match_parent"
        />
    <Button
        android:id="@+id/btn_use_ip"
        android:layout_height = "wrap_content"
        android:layout_width="match_parent"
        android:text="Fix IP"/>
</LinearLayout>